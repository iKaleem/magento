<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="phpstudios_sales_bestseller" resource="sales" engine="innodb" comment="custom module">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="boolean" name="is_featured" comment="is featured?"/>
        <column xsi:type="varchar" name="name" comment="Name"/>
        <column xsi:type="varchar" name="description" comment="Description"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
